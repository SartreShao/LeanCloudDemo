<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_act_recycler_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/main_act_recycler_textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="username" />

            <TextView
                android:id="@+id/main_act_recycler_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/main_act_recycler_textview1"
                android:layout_below="@+id/main_act_recycler_textview1"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_toStartOf="@+id/main_act_recycler_textview3"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="14sp"
                tools:text="title" />

            <TextView
                android:id="@+id/main_act_recycler_textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="16sp"
                tools:text="price" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/main_act_recycler_imageview1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/main_act_string2"
            android:scaleType="centerCrop" />
    </LinearLayout>

</android.support.v7.widget.CardView>
